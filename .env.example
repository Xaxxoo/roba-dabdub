# Application
NODE_ENV=development
PORT=3000
APP_NAME=Payment Gateway API

# Database Configuration (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=payment_gateway_db

# Redis Configuration (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRATION=7d

# Blockchain Configuration
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=https://rpc-endpoint.example.com
BLOCKCHAIN_CHAIN_ID=1
PRIVATE_KEY=your-wallet-private-key

# Smart Contract Addresses
PAYMENT_CONTRACT_ADDRESS=0x...
USDT_CONTRACT_ADDRESS=0xc2132D05D31c914a87C6611C10748AEb04B58e8F
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Account Abstraction (ERC-4337) - Optional
BUNDLER_URL=https://bundler.example.com
ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# Payment Gateway Settings
PAYMENT_CALLBACK_URL=http://localhost:3000/api/payments/callback
PAYMENT_TIMEOUT=300000
MIN_PAYMENT_AMOUNT=0.01
MAX_PAYMENT_AMOUNT=10000

# Settlement Configuration
SETTLEMENT_SCHEDULE=0 0 * * *
SETTLEMENT_MIN_AMOUNT=100
AUTO_SETTLEMENT_ENABLED=true

# API Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Monitoring (Optional)
SENTRY_DSN=
ENABLE_METRICS=false